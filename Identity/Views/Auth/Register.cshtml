@model RegisterViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "_Layout";
    string hasValue = string.IsNullOrEmpty(Model.Email) ? "" : "has-val";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form asp-controller="Auth" asp-action="Register" class="login100-form validate-form" method="post">
                <input asp-for="ReturnUrl" type="hidden"/>

                <span class="login100-form-title p-b-26">
                    Welcome
                </span>
                <span class="login100-form-title p-b-48">
                    <i class="zmdi zmdi-font"></i>
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                    <input asp-for="Email" class="input100 @hasValue" type="email" name="email">
                    <span class="focus-input100" data-placeholder="Email"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input asp-for="Password" class="input100" type="password" name="password">
                    <span  class="focus-input100" data-placeholder="Password"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Confirm Password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input asp-for="ConfirmPassword" class="input100" type="password" name="confirmPassword">
                    <span  class="focus-input100" data-placeholder="Confirm Password"></span>
                </div>
                
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Sign Up
                        </button>
                    </div>
                </div>

                <div class="text-center p-t-115">
                    <span class="txt1">
                        Already have an account?
                    </span>

                    <a class="txt2" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        Sign In
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>